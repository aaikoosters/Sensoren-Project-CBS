<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:SensorenCBS" 
		x:Class="SensorenCBS.MotionPage">

	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 10, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="10">

			<Label Text="X" x:Name="lblX" />
			<Label Text="Y" x:Name="lblY" />
			<Label Text="Z" x:Name="lblZ" />
			<Label Text="mAccel" x:Name="lblAccel" />
			<Label Text="Aantal keer op en neer getild: " x:Name="lblOp" />


		</StackLayout>
	</ContentPage.Content>
</ContentPage>
